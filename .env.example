# --- App Security ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET= # Run 'openssl rand -hex 32' to generate

# --- Database (SQLite) ---
DATABASE_URL=file:./dev.db

# --- SMTP (Email OTP) ---
# For Gmail: Use App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# --- LLM (OpenAI-compatible / Ollama) ---
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_API_KEY= # Optional for local Ollama, required for providers
LLM_MODEL=gemma3:12b
LLM_TEMPERATURE=0.3
LLM_TOP_P=0.9
LLM_MAX_TOKENS=1800

# --- AI Debugging & Processing ---
AI_DEBUG=0 # Set to 1 to enable file-based logging in /logs
AI_DEBUG_DIR=logs
FILTER_HAN=1 # 1: Filter out Han/Chinese characters from AI output, 0: Keep

# --- Google OAuth (Optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Public Config ---
NEXT_PUBLIC_YOUTUBE_ID=dQw4w9WgXcQ # Used for the landing page demo video
DEMO_VIDEO_URL=https://www.youtube.com/watch?v=dQw4w9WgXcQ # Used for the /demo_video redirect
